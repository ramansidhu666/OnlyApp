 $('input[name="BrokerageDate"]').daterangepicker(
      {
          singleDatePicker: true,
          format: 'MM/DD/YYYY',
          startDate: todayDate,
          minDate: todayDate

      },
      function (start, end, label) {

      }


  );

$('input[name="VerificationDate"]').daterangepicker(
 {
     singleDatePicker: true,
     format: 'MM/DD/YYYY',
     startDate: todayDate,
     minDate: todayDate

 },
 function (start, end, label) {

 }


);
        })

    </script>
</body>

</html>